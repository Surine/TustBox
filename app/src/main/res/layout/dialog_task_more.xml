<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    android:layout_marginStart="20dp"
    app:cardCornerRadius="10dp"
    android:layout_marginEnd="20dp"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
          android:id="@+id/label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="20dp"
          android:layout_marginTop="17dp"
          android:text="更多"
          android:textColor="@color/Tust_Black"
          android:textSize="@dimen/dialog_title_size"
          android:textStyle="bold" />

      <Button
          android:id="@+id/ok"
          style="@style/Widget.AppCompat.Button.Borderless.Colored"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_below="@+id/message"
          android:layout_marginTop="20dp"
          android:text="@string/ok"
          android:layout_marginBottom="8dp"
          android:textStyle="bold" />

      <Button
          android:id="@+id/cancel"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/ok"
          android:layout_alignBottom="@+id/ok"
          android:layout_toStartOf="@+id/ok"
          android:text="@string/cancel"
          android:textStyle="bold" />

      <CheckBox
          android:id="@+id/shareTask"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignStart="@+id/label"
          android:layout_below="@+id/label"
          android:layout_marginTop="14dp"
          android:text="将本任务匿名分享至任务圈"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/message"
          android:textSize="10sp"
          android:layout_marginStart="6dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignStart="@+id/shareTask"
          android:layout_below="@+id/shareTask"
          android:layout_marginEnd="20dp"
          android:text="选中后，您创建的任务将会被匿名分享到任务圈，其他同学可以一键添加任务圈里与自己相关的任务" />
  </RelativeLayout>
</android.support.v7.widget.CardView>