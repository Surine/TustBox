<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Tust_White"
    tools:context="com.surine.tustbox.UI.Activity.SchZoneActivity">
    <include layout="@layout/toolbar" />
    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/addClass"
        android:gravity="center_vertical"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/include2"
            android:layout_below="@+id/include2"
            android:text="新建课程"
            android:textColor="@color/Tust_Black"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView15"
            android:paddingStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView14"
            android:layout_below="@+id/textView14"
            android:text="当您缺课的时候，可以通过手动的方式添加课程" />

    </LinearLayout>

</RelativeLayout>
