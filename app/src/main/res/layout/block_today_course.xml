<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout_message_title_share"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical">

        <View
            android:id="@+id/view_message_title_color"
            android:layout_width="5dp"
            android:layout_height="18dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="@color/Tust_Red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:id="@+id/tv_today_course_title"
            android:layout_toEndOf="@+id/view_message_title_color"
            android:gravity="center"
            android:text="今日课程"
            android:textColor="@color/Tust_Black"
            android:textSize="@dimen/index_page_title_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_today_course"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/relativeLayout_message_title_share" />

</RelativeLayout>