<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/taskInfoBack"
    android:layout_height="match_parent"
    tools:context="com.surine.tustbox.UI.TaskInfoActivity">
    <ImageView
        android:id="@+id/courseInfoImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:transitionName="backRelative"
        />
    <include layout="@layout/toolbar"
        />

    <TextView
        android:id="@+id/course_info_name"
        android:layout_marginStart="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="41dp"
        android:text="Android课程设计"
        android:textColor="@color/Tust_White"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_below="@id/course_info_name"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/info1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/course_info_name"
            android:layout_below="@+id/course_info_name"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="NULL"
            android:textColor="@color/Tust_White" />

        <TextView
            android:id="@+id/info2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:text="NULL"
            android:textColor="@color/Tust_White" />


    </LinearLayout>

    <TextView
        android:id="@+id/info3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_below="@+id/linearLayout"
        android:gravity="center_vertical"
        android:text="NULL"
        android:textColor="@color/Tust_White" />


</RelativeLayout>
