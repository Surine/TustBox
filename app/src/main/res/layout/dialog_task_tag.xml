<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    android:layout_marginStart="20dp"
    app:cardCornerRadius="10dp"
    android:layout_marginEnd="20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:text="标签"
            android:textColor="@color/Tust_Black"
            android:textSize="@dimen/dialog_title_size"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_below="@id/label"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/examTouch"
                android:background="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/exam_task_black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="考试"
                    android:textColor="@color/Tust_Black"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_width="match_parent"
                android:id="@+id/bussTouch"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/buss_task_black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="会议"
                    android:textColor="@color/Tust_Black"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_width="match_parent"
                android:id="@+id/tripTouch"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/task_trip_black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="旅行"
                    android:textColor="@color/Tust_Black"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_width="match_parent"
                android:id="@+id/thingTouch"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/things_task_black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="琐事"
                    android:textColor="@color/Tust_Black"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_width="match_parent"
                android:id="@+id/otherTouch"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_important_black_24dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="其他"
                    android:textColor="@color/Tust_Black"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>