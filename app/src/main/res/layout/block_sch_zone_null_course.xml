<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout_message_title_share"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">

        <View
            android:id="@+id/view_message_title_color"
            android:layout_width="5dp"
            android:layout_height="18dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="@color/Tust_Green_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/view_message_title_color"
            android:gravity="center"
            android:text="缺课怎么办？"
            android:textColor="@color/Tust_Black"
            android:textSize="@dimen/index_page_title_size"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/relativeLayout_message_title_share"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/zone1_r"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            >
            <ImageView
                android:id="@+id/zone1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/create_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView14"
                android:layout_alignParentStart="true"
                android:paddingBottom="2dp"
                android:paddingStart="10dp"
                android:text="新建课程"
                android:textColor="@color/Tust_White"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingStart="10dp"
                android:paddingBottom="2dp"
                android:text="在这里你可以手动添加一门课程！"
                android:textColor="@color/Tust_White"
                android:id="@+id/textView14" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/zone2_r"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            >
            <ImageView
                android:id="@+id/zone2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/create_course2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView15"
                android:layout_alignParentStart="true"
                android:paddingBottom="2dp"
                android:paddingStart="10dp"
                android:text="下载课表"
                android:textColor="@color/Tust_White"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingStart="10dp"
                android:paddingBottom="2dp"
                android:text="在这里你可以下载同学的课表！"
                android:textColor="@color/Tust_White"
                android:id="@+id/textView15" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>