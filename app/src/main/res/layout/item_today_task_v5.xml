<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/taskCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingBottom="20dp"
    android:paddingTop="10dp"
    android:transitionName="backRelative">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginStart="@dimen/main_card_conent_margin_start">

        <TextView
            android:id="@+id/classInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1/2"
            android:textSize="19sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
    <!--android:paddingStart="30dp"-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/taskName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:text="任务名称"
            android:textColor="@color/Tust_Black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/xml_locate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/location_v5_p12" />

            <TextView
                android:id="@+id/taskRoom"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/xml_locate"
                android:gravity="center_vertical"
                android:text="泰达西苑 8-211"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/main_card_conent_margin_start">

    </LinearLayout>
</LinearLayout>