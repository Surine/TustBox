<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="@color/color2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="1dp"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_height="200dp"
                android:layout_width="match_parent"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Tust_Black"
                    android:id="@+id/ivBackColor"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="课程名"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:id="@+id/tvCourseName"
                    android:textColor="@color/Tust_White"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCourseName"
                    android:gravity="center"
                    android:text="0"
                    android:maxLength="5"
                    android:id="@+id/tvCourseScore"
                    android:textColor="@color/Tust_White"
                    android:textSize="40sp"
                    android:textStyle="bold|italic" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/Tust_Red"
                        android:padding="15dp"
                        android:id="@+id/viewPoint"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/viewPoint"
                        android:text="教师：xxxx"
                        android:id="@+id/tvTeacher"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/Tust_more_color_1"
                        android:padding="15dp"
                        android:id="@+id/viewPoint2"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/viewPoint2"
                        android:text="教师：xxxx"
                        android:id="@+id/tvCourseInfo"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/Tust_11"
                        android:padding="15dp"
                        android:id="@+id/viewPoint3"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/viewPoint3"
                        android:text="教师：xxxx"
                        android:id="@+id/tvCourseExamScore"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/school_head_shape"
                        android:padding="15dp"
                        android:id="@+id/viewPoint4"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/viewPoint4"
                        android:text="教师：xxxx"
                        android:id="@+id/tvCourseOther"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/fragment_courseInfo_score"
                    android:id="@+id/btnScore" />

                <Button
                    android:id="@+id/edit_course"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/btnScore"
                    android:text="编辑" />

                <Button
                    android:id="@+id/btnRecommand"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/btnScore"
                    android:text="@string/fragment_CourseInfo_Recommand_Btn_Text"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>