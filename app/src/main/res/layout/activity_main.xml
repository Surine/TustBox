<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="@color/Tust_White"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.surine.tustbox.UI.MainActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:paddingTop="@dimen/toolbar_height_padding"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/Tran"
          >
          <TextView
              android:layout_width="@dimen/toolbar_height"
              android:layout_height="@dimen/toolbar_height"
              android:textColor="@color/Tust_Black"
              android:gravity="center_vertical"
              android:textSize="18sp"
              android:id="@+id/title"
              />
          <TextView
              android:layout_width="@dimen/toolbar_height"
              android:layout_height="@dimen/toolbar_height"
              android:padding="10dp"
              android:id="@+id/toolbar_message"
              android:layout_alignParentEnd="true"
              android:textColor="@color/Tust_Black"
              android:text="消息"
              android:background="?android:attr/selectableItemBackgroundBorderless"
              android:gravity="center"
              />
      </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    </FrameLayout>

</LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/Tust_White"
        android:fitsSystemWindows="true"
        app:menu="@menu/activity_drawer_layout"/>
</android.support.v4.widget.DrawerLayout>