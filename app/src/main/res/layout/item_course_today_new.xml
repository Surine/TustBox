<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    app:cardElevation="1dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:id="@+id/view_card"
    android:background="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/today_course_background"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@color/colorPrimary"
                android:padding="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginEnd="75dp"
    android:layout_toEndOf="@id/today_course_background"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/today_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingEnd="8dp"
        android:paddingStart="20dp"
        android:text="移动终端应用开发"
        android:textColor="@color/Tust_Grey"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/today_course_background"/>

    <TextView
        android:id="@+id/course_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/today_course_name"
        android:layout_marginTop="3dp"
        android:ellipsize="marquee"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/today_course_background"
        android:maxLines="1"
        android:textSize="12sp"
        android:text="8:00 @ 泰达西苑 10-211 By 某老师"/>
</LinearLayout>

    <TextView
        android:id="@+id/course_time"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="20dp"
        android:text="8:00"
        android:textStyle="bold"/>

</RelativeLayout>
</android.support.v7.widget.CardView>