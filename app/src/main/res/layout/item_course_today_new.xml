<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/course_card_height"
    android:id="@+id/view_card"
    android:layout_marginTop="5dp"
    android:background="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/today_course_background"
                android:layout_width="@dimen/course_card_height"
                android:layout_height="@dimen/course_card_height"
                android:padding="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/bkg_03_mar"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginEnd="@dimen/course_card_height"
    android:layout_toEndOf="@id/today_course_background"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/today_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/today_course_background"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="课程名字"
        android:paddingEnd="8dp"
        android:paddingStart="20dp"
        android:textColor="@color/Tust_Grey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/course_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/today_course_name"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/today_course_background"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:singleLine="true"
        android:text="课程信息"
        android:textSize="10sp" />
</LinearLayout>

</RelativeLayout>
