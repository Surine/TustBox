<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.surine.tustbox.UI.MainActivity">


    <FrameLayout
        android:id="@+id/course_info_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/course_info_toolbar">
    </FrameLayout>

    <android.support.v7.widget.Toolbar
       android:id="@+id/course_info_toolbar"
       app:layout_behavior="@string/appbar_scrolling_view_behavior"
       android:layout_width="match_parent"
       android:layout_height="@dimen/toolbar_height"
       android:paddingTop="@dimen/toolbar_height_padding"
       android:background="?attr/colorPrimary"
       android:fitsSystemWindows="true"
       android:elevation="2dp"
       android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
       app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
</RelativeLayout>
