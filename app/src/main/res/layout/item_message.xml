<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="8dp"
    android:paddingBottom="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/message_layout"
    >
   <de.hdodenhof.circleimageview.CircleImageView
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:src="@color/school_head_shape"
       android:layout_marginTop="10dp"
       android:layout_marginStart="10dp"
       android:id="@+id/item_message_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_message_head"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/item_message_head"
        android:text=""
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/Tust_Black"
        android:id="@+id/item_message_name" />

    <TextView
        android:id="@+id/item_message_type"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_alignStart="@+id/item_message_name"
        android:layout_below="@+id/item_message_name"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxLength="10"
        android:id="@+id/item_message_info"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/item_message_name"
        android:layout_toEndOf="@+id/item_message_type"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/item_message_time"
        android:layout_alignTop="@+id/item_message_name"
        android:layout_marginEnd="17dp"
        android:text="" />

 <TextView
     android:id="@+id/item_message_isread"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignEnd="@+id/item_message_time"
     android:layout_below="@+id/item_message_name"
     android:text="【未读】"
     android:background="@color/Tust_Red"
     android:layout_marginTop="5dp"
     android:textColor="@color/white"
     android:textStyle="bold" />
</RelativeLayout>