    <PreferenceCategory
        android:title="@string/box"
        >
      <Preference
          android:title="启用盒子功能"
          />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/me"
        >
        <SwitchPreference
            android:key="setting_close_show_picture"
            android:title="隐藏证件照"
            android:summary="开启后将替换您的证件照"
            />
