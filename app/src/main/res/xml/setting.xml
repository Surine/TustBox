       >
      <Preference
          android:key="setting_back"
          android:title="@string/setting_back_title"
          android:summary="@string/setting_background_summ"
          />
      <SwitchPreference
          android:key="setting_dialog"
          android:title="@string/today_course_title"
          android:summary="@string/close_dialog_summ"
          />
      <Preference
          android:key="clear_cache"
          android:title="@string/clear_cache"
          android:summary="@string/clear_sunmmy"
          />
