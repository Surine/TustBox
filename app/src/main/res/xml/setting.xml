    <PreferenceCategory
        android:title="@string/about_app"
        >
        <Preference
            android:key="about"
            android:title="关于软件"
            />
        <Preference
            android:key="check_update"
            android:title="检查更新"
            />
        <Preference
            android:key="notic"
            android:title="免责声明"
            />
        <Preference
            android:key="bug"
            android:title="Bug反馈"
            />
        <Preference
            android:key="orl"
            android:title="开源许可"
            />
        <Preference
            android:key="help"
            android:title="赞助开发者"
